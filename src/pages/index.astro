---
// src/pages/index.astro
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import DestaquePrincipal from '../components/DestaquePrincipal.astro';
import NoticiaCard from '../components/NoticiaCard.astro';
import VozComunidade from '../components/VozComunidade.astro';
// Importamos os dados do trem
import statusData from '../data/statusTrem.json'; 

// --- LÓGICA DE NOTÍCIAS ---
const todasNoticias = (await getCollection('noticias')).sort(
  (a, b) => new Date(b.data.data).getTime() - new Date(a.data.data).getTime()
);

// 1. Destaques (Carrossel - Top 5)
const noticiasCarrossel = todasNoticias
  .filter(noticia => noticia.data.destaque === true)
  .slice(0, 5);

const destaquesFinais = noticiasCarrossel.length > 0 ? noticiasCarrossel : todasNoticias.slice(0, 5);

// 2. Grid "Cidade Alerta"
const todasNoticiasRestantes = todasNoticias.filter(
  noticia => !destaquesFinais.some(d => d.id === noticia.id)
);

// Pegamos apenas 5 notícias, pois 1 espaço será do ANÚNCIO
const noticiasParaGrid = todasNoticiasRestantes.slice(0, 5);
const existeMaisNoticias = todasNoticiasRestantes.length > 5;


// --- LÓGICA DA VOZ DA COMUNIDADE ---
const todasDenuncias = (await getCollection('denuncias')).sort(
  (a, b) => new Date(b.data.data).getTime() - new Date(a.data.data).getTime()
);
const denunciasRecentes = todasDenuncias.slice(0, 4);
const temMaisDenuncias = todasDenuncias.length > 4;

// --- CONFIGURAÇÃO VISUAL DO STATUS ---
const statusConfig = {
    'normal': { bg: 'bg-green-600', ping: 'bg-green-400', label: 'Operação Normal' },
    'atrasado': { bg: 'bg-yellow-500', ping: 'bg-yellow-300', label: 'Com Atrasos' },
    'suspenso': { bg: 'bg-red-base', ping: 'bg-red-300', label: 'Suspensa' },
    'manutencao': { bg: 'bg-navy-base', ping: 'bg-blue-400', label: 'Manutenção' }
};
const currentStatus = statusConfig[statusData.estado.toLowerCase() as keyof typeof statusConfig] || statusConfig['normal'];
---

<Layout title="emguapi.com | Notícias de Guapimirim">
    <Navbar />

    <main class="max-w-5xl mx-auto p-6 bg-white min-h-screen shadow-2xl my-8 rounded-[2.5rem] overflow-hidden border border-borderLight">
        
        <section class="mb-8">
            {destaquesFinais.length > 0 ? (
                <div class="relative group" id="carousel-parent">
                    <div id="carousel-container" class="flex overflow-x-auto snap-x snap-mandatory scroll-smooth no-scrollbar rounded-[2.5rem] gap-0">
                        {destaquesFinais.map((noticia, index) => (
                            <div class="min-w-full snap-center" data-index={index}>
                                <DestaquePrincipal 
                                    titulo={noticia.data.titulo}
                                    resumo={noticia.data.resumo}
                                    categoria={noticia.data.categoria}
                                    imagem={noticia.data.imagem || "/fotos/estacao-guapi.jpg"} 
                                    link={`/noticias/${noticia.id.replace(/\.md$/, '')}`}
                                />
                            </div>
                        ))}
                    </div>
                    <div class="absolute bottom-12 right-12 flex gap-3 z-10">
                        {destaquesFinais.map((_, i) => (
                            <button class="carousel-dot w-3 h-3 rounded-full bg-white/20 border border-white/40 transition-all hover:bg-red-base" data-slide={i}></button>
                        ))}
                    </div>
                </div>
            ) : (
                <div class="bg-navy-dark h-[400px] rounded-3xl flex items-center justify-center text-white italic">Carregando...</div>
            )}
        </section>

        <section class="mb-12">
            <a href="/horarios" class="group block">
                <div class="bg-ice border-l-8 border-navy-base rounded-2xl p-4 flex items-center justify-between shadow-sm hover:shadow-md transition-all hover:bg-gray-50">
                    <div class="flex items-center gap-4">
                        <div class={`text-white p-2 rounded-lg ${currentStatus.bg}`}>
                            {statusData.estado.toLowerCase() === 'normal' && (
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 4.875c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5A1.125 1.125 0 0 1 3.75 9.375v-4.5ZM3.75 14.625c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5a1.125 1.125 0 0 1-1.125-1.125v-4.5ZM13.5 4.875c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5A1.125 1.125 0 0 1 13.5 9.375v-4.5Z" />
                                </svg>
                            )}
                            {statusData.estado.toLowerCase() === 'atrasado' && (
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                                </svg>
                            )}
                            {statusData.estado.toLowerCase() === 'suspenso' && (
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 0 0 5.636 5.636m12.728 12.728A9 9 0 0 1 5.636 5.636m12.728 12.728L5.636 5.636" />
                                </svg>
                            )}
                            {statusData.estado.toLowerCase() === 'manutencao' && (
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
                                     <path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17 17.25 21A2.652 2.652 0 0 0 21 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 1 1-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 0 0 4.486-6.336l-3.276 3.277a3.004 3.004 0 0 1-2.25-2.25l3.276-3.276a4.5 4.5 0 0 0-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437 1.745-1.437" />
                                </svg>
                            )}
                        </div>
                        
                        <div>
                            <h3 class="text-xs font-black uppercase tracking-widest text-navy-soft mb-1">Circulação de Trens</h3>
                            <p class="text-lg font-black text-navy-dark leading-none">Ramal Guapimirim</p>
                        </div>
                    </div>

                    <div class="flex items-center gap-3 bg-white px-4 py-2 rounded-xl border border-borderLight group-hover:border-navy-base/30 transition-colors">
                        <span class="relative flex h-3 w-3">
                            <span class={`animate-ping absolute inline-flex h-full w-full rounded-full opacity-75 ${currentStatus.ping}`}></span>
                            <span class={`relative inline-flex rounded-full h-3 w-3 ${currentStatus.bg}`}></span>
                        </span>
                        <span class={`font-black text-xs uppercase ${currentStatus.bg.replace('bg-', 'text-')}`}>
                            {currentStatus.label}
                        </span>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-4 h-4 text-navy-soft">
                          <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
                        </svg>
                    </div>
                </div>
            </a>
        </section>

        <section class="mb-12">
            <h2 class="text-xl font-black uppercase tracking-tighter text-navy-dark mb-10 flex items-center gap-3 italic">
                <span class="w-10 h-1.5 bg-red-base inline-block"></span>
                Cidade Alerta
            </h2>
            
            <div class="grid md:grid-cols-2 gap-10 mb-12">
                
                {noticiasParaGrid.slice(0, 2).map(noticia => (
                    <NoticiaCard 
                        categoria={noticia.data.categoria}
                        titulo={noticia.data.titulo}
                        resumo={noticia.data.resumo}
                        data={noticia.data.data}
                        link={`/noticias/${noticia.id.replace(/\.md$/, '')}`}
                        imagem={noticia.data.imagem || "/fotos/estacao-guapi.jpg"}
                    />
                ))}

                <a href="https://wa.me/5521969400053" target="_blank" class="group block bg-ice rounded-[2rem] overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border-2 border-dashed border-navy-base/20 hover:border-red-base flex flex-col h-full relative">
                    <div class="absolute top-4 right-4 z-10">
                        <span class="bg-white/90 text-navy-dark text-[9px] font-black px-2 py-1 rounded md:rounded-lg uppercase tracking-widest border border-gray-200">Publicidade</span>
                    </div>
                    
                    <div class="relative w-full aspect-square overflow-hidden bg-white border-b border-gray-100">
                        <img 
                            src="/banners/subway.png" 
                            alt="Anúncio" 
                            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105 opacity-90 group-hover:opacity-100" 
                        />
                    </div>

                    <div class="p-6 flex flex-col flex-grow justify-center text-center">
                        <h3 class="text-xl font-black text-navy-dark leading-tight mb-2 group-hover:text-red-base uppercase italic">
                            Sua Marca Aqui!
