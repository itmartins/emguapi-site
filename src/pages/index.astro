            </div>

            <div class="grid md:grid-cols-2 gap-6 mb-8">
                {denunciasRecentes.length > 0 ? (
                    denunciasRecentes.map(relato => (
                        <VozComunidade 
                            bairro={relato.data.bairro}
                            relato={relato.data.resumo_relato}
                            autor={relato.data.autor}
                        />
                    ))
                ) : (
                    <div class="col-span-2 bg-ice p-8 rounded-3xl text-center text-navy-soft italic">
                        <p>Nenhum relato em destaque nesta semana.</p>
                    </div>
                )}
            </div>

            {temMaisDenuncias && (
                <div class="text-center">
                    <a href="/denuncia" class="text-navy-base font-black uppercase text-xs hover:underline decoration-red-base underline-offset-4">
                        Ver relatos anteriores →
                    </a>
                </div>
            )}
        </section>
        
    </main>
</Layout>

<script>
    // Script do Carrossel
    const container = document.getElementById('carousel-container');
    const dots = document.querySelectorAll('.carousel-dot');
    let currentIndex = 0;
    let autoPlayInterval: number;

    function scrollToSlide(index: number) {
        if (!container) return;
        const width = container.offsetWidth;
        if (index >= dots.length) index = 0;
        container.scrollTo({ left: width * index, behavior: index === 0 ? 'auto' : 'smooth' });
        updateDots(index);
        currentIndex = index;
    }

    function updateDots(index: number) {
        dots.forEach((dot, i) => {
            if (i === index) {
                dot.classList.add('bg-red-base', 'w-6');
                dot.classList.remove('bg-white/20');
            } else {
                dot.classList.remove('bg-red-base', 'w-6');
                dot.classList.add('bg-white/20');
            }
        });
    }

    dots.forEach((dot, i) => {
        dot.addEventListener('click', () => {
            scrollToSlide(i);
            resetInterval();
        });
    });

    function startInterval() {
        autoPlayInterval = setInterval(() => {
            currentIndex++;
            scrollToSlide(currentIndex);
        }, 6000) as unknown as number;
    }

    function resetInterval() {
        clearInterval(autoPlayInterval);
        startInterval();
    }

    if (dots.length > 0) {
        updateDots(0);
        startInterval();
    }

    container?.addEventListener('scroll', () => {
        const index = Math.round(container.scrollLeft / container.offsetWidth);
        if (index !== currentIndex && index < dots.length) {
            updateDots(index);
            currentIndex = index;
        }
    });
</script>

<style>
    .no-scrollbar::-webkit-scrollbar { display: none; }
    .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>