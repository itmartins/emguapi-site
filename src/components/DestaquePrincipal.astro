---
interface Props {
  titulo: string;
  resumo: string;
  categoria: string;
  imagem: string;
  link: string;
}

const { titulo, resumo, categoria, imagem, link } = Astro.props;
---

<a href={link} class="group relative block w-full h-[500px] overflow-hidden rounded-[2.5rem] shadow-xl">
  
  <div class="absolute inset-0 w-full h-full">
    <img 
      src={imagem} 
      alt={titulo} 
      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-[#000033] via-[#000033]/40 to-transparent opacity-90"></div>
  </div>

  <div class="absolute bottom-0 left-0 w-full p-8 md:p-10 z-10 flex flex-col justify-end h-full">
    
    <span class="inline-block bg-red-base text-white text-[10px] font-black uppercase tracking-widest px-3 py-1 rounded mb-4 w-fit">
      {categoria}
    </span>

    <h2 class="text-2xl md:text-4xl font-black text-white leading-tight mb-3 drop-shadow-lg">
      {titulo}
    </h2>

    <p class="text-gray-200 text-sm md:text-base line-clamp-2 md:line-clamp-3 mb-6 max-w-2xl drop-shadow-md">
      {resumo}
    </p>

    <div class="flex items-center gap-2 text-red-base text-xs font-black uppercase tracking-widest">
      Ler Reportagem Completa 
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor" class="w-3 h-3 group-hover:translate-x-1 transition-transform">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
      </svg>
    </div>
    
    <div class="w-24 h-1 bg-red-base mt-6"></div>
  </div>
</a>